<%- include('./partials/header.ejs') %>

<div class="container-fluid bg-dark">
    <div class="row">
        <div class="col-sm-2">
            <%- include('./partials/sidebar.ejs', {page_name: "contact"}) %>
        </div>

        <div class="col-sm-10">
            <div class="container text-white py-5">
                <div class="row">
                    <div class="col-md-12 text-center mb-5">
                        <h1 class="display-4 mb-4 heading">Contact Me</h1>
                        <p class="lead mb-3">Feel free to reach out for any inquiries or collaboration opportunities!</p>
                    </div>
                </div>

                <!-- Contact Info (Above Form, Horizontal Layout) -->
                <div class="row justify-content-center mb-5">
                    <div class="col-md-10">
                        <div class="glass-form-container p-4">
                            <h3 class="mb-4 text-light text-center">Get in Touch</h3>
                            <div class="d-flex flex-wrap justify-content-around mb-4">
                                <div class="info-item d-flex align-items-center mb-3">
                                    <i class="fas fa-map-marker-alt fa-2x text-light me-3"></i>
                                    <div>
                                        <h5 class="text-light mb-1">Address</h5>
                                        <p class="text-light mb-0">Gurugram, Sec 44, Haryana, India</p>
                                    </div>
                                </div>
                                <div class="info-item d-flex align-items-center mb-3">
                                    <i class="fas fa-phone-alt fa-2x text-light me-3"></i>
                                    <div>
                                        <h5 class="text-light mb-1">Call Me</h5>
                                        <p class="text-light mb-0"><a href="tel:+9185068850066" class="text-light">+91 85068850066</a></p>
                                    </div>
                                </div>
                                <div class="info-item d-flex align-items-center mb-3">
                                    <i class="fas fa-envelope fa-2x text-light me-3"></i>
                                    <div>
                                        <h5 class="text-light mb-1">Email Me</h5>
                                        <p class="text-light mb-0"><a href="mailto:akshitmudgal001@gmail.com" class="text-light">akshitmudgal001@gmail.com</a></p>
                                    </div>
                                </div>
                            </div>
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3507.309717241258!2d77.05949631507924!3d28.46503798248361!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x390d3d0c00000001%3A0x6c554b0c5c39f4b2!2sSector%2044%2C%20Gurugram%2C%20Haryana%20122022%2C%20India!5e0!3m2!1sen!2sin!4v1733924691234!5m2!1sen!2sin" frameborder="0" style="border:0; width: 100%; height: 250px;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                    </div>
                </div>

                <!-- Existing Form (Below Contact Info) -->
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="glass-form-container p-4">
                            <% if (success_msg && success_msg.length > 0) { %>
                                <div class="alert alert-success custom-alert fade show text-center" role="alert">
                                    <i class="fas fa-check-circle me-2"></i><%= success_msg %>
                                    <button type="button" class="btn-close custom-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            <% } %>
                            <% if (error_msg && error_msg.length > 0) { %>
                                <div class="alert alert-danger custom-alert fade show text-center" role="alert">
                                    <i class="fas fa-exclamation-circle me-2"></i><%= error_msg %>
                                    <button type="button" class="btn-close custom-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            <% } %>
                            <form action="/submit-contact" method="POST">
                                <div class="form-group mb-4">
                                    <label for="name" class="text-light">
                                        <i class="fas fa-user"></i> Name
                                    </label>
                                    <input type="text" id="name" name="name" class="form-control" placeholder="Enter your name" required>
                                </div>

                                <div class="form-group mb-4">
                                    <label for="email" class="text-light">
                                        <i class="fas fa-envelope"></i> Email
                                    </label>
                                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required>
                                </div>

                                <div class="form-group mb-4">
                                    <label for="message" class="text-light">
                                        <i class="fas fa-comment"></i> Message
                                    </label>
                                    <textarea id="message" name="message" class="form-control" rows="5" placeholder="Your message here..." required></textarea>
                                </div>

                                <div class="form-group text-center">
                                    <button type="submit" class="btn btn-outline-light btn-lg px-4 py-2">
                                        <i class="fas fa-paper-plane"></i> Send Message
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>